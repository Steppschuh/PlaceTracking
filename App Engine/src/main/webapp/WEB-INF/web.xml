<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Oracle Corporation//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

    <!-- Objectify -->
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>placetracking.datastore.OfyHelper</listener-class>
    </listener>

    <!-- Demo Servlet -->
    <servlet>
        <servlet-name>demo</servlet-name>
        <servlet-class>placetracking.DemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>

    <!-- Topic Servlet -->
    <servlet>
        <servlet-name>topic</servlet-name>
        <servlet-class>placetracking.TopicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>topic</servlet-name>
        <url-pattern>/topic</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
